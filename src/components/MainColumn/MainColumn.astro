---
import About from './About.astro'
import Projects from './ProjectsSection/ProjectsSection.astro'
---

<main>
    <article id="about"> 
        <About />
    </article>
    <article id="projects">
        <Projects />
    </article>
    <article id="portfolios">portfolios</article>
    <article id="skills">skills</article>
    <article id="contact">contact</article>
</main>


<style>
	main {
		width: 40vw;
	}
    
	article {
        display: flex;
        flex-direction: column;
		align-items: center;
        height: 82vh;
        
        padding-top: 20vh;

        
		/* For Testing */
		border: 1px solid var(--border-hover);
	}
    

	

	@media screen and (max-width: 600px){
		main {
			width: 100%;
		}

		.mobile {
			display: block;
		}
	}
</style>