<style>
    aside {
        position: fixed;
        left: 0;
        top: 15vh;
        width: 30vw;

        display: flex;
        flex-direction: column;
        

        /* border: 1px solid red; */

        padding-left: 3vw;
    }

    img {
        max-height: 50vh;
        width: 15vw;

        height: auto;
        width: auto; 
    }

    #link-container-desktop {
        width: 15vw;
        height: 30vh;

        display: flex;
        flex-direction: column;
        justify-content: space-between;

        padding-top: 2vh;

        /* border: 1px solid red; */
    }

    @media screen and (max-width: 1000px){
        aside {
