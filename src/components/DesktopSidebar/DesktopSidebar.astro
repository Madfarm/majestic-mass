<aside>
    <div id="photo">
        <img src="/IMG_9807.jpg" alt="Portrait of me" />
    </div>

    <div id="link-container-desktop">
        <SocialLink name="bi:linkedin" text="LINKEDIN" link="https://www.linkedin.com/in/anthony-steven-scott/" />
        <SocialLink name="jam:github" text="GITHUB" link="https://github.com/Madfarm" />
